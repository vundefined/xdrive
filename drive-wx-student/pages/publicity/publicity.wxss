@import "/styles/label-style.wxss";
@import "/styles/img-style.wxss";
@import "/styles/txt-style.wxss";

page {
    width: 750rpx;
    box-sizing: border-box;
    background-color: #F5F5F5;
}

.btn-gen {
	margin: 20rpx 0rpx 0rpx 0rpx;
}

.agreement {
    padding: 10rpx 20rpx 0rpx 28rpx;
}

.agreement-a {
    color: blue;
    text-decoration-line: underline;
} 

/* height:560rpx; */
.fixed-bottom {
	width: 750rpx;
	height: 400rpx;
	position: fixed;
	bottom: 0rpx;
	left: 0rpx;
	background-color: #ffffff;
	box-shadow: 0px -10rpx 20rpx 0rpx #686B66;
}

.btn-absolute {
	position: absolute;
	left: 25rpx;
	top: 40rpx;
}

.mb-split {
    width: 750rpx;
    height: 600rpx;
}

.img-a {
    width: 600rpx;
    height: 280rpx;
    margin-top: 24rpx;
}

.class-category {
	padding: 30rpx 26rpx 0rpx 26rpx;
	display: flex;
	flex-direction: row;
	align-items: center;
	flex-wrap: wrap;
}

.cd-normal-class {
	width: 180rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid #F2F2F2;
	margin: 0rpx 10rpx 20rpx 10rpx;
}

.cd-selected-class {
	width: 180rpx;
	height: 60rpx;
	text-align: center;
	line-height: 60rpx;
	border: 2rpx solid rgb(255, 0, 0);
	margin: 0rpx 10rpx 20rpx 10rpx;
}